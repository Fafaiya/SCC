<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_marginTop="2dp"
    android:layout_marginBottom="2dp"
    android:layout_marginLeft="4dp"
    android:layout_marginRight="4dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/iv_item_list_lamaran"
            android:src="@mipmap/ic_launcher"
            android:scaleType="fitCenter"
            android:layout_width="100dp"
            android:layout_height="100dp" />
        <LinearLayout
            android:paddingLeft="5dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="100dp">
            <TextView
                android:id="@+id/tv_item_list_lamaran_nama_perusahaan"
                android:text="Nama Perusahaan"
                android:textSize="20sp"
                android:textColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:text="Seleksi berkas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Button
                    android:id="@+id/btn_item_lamaran_edit"
                    android:text="edit"
                    android:textColor="@color/putih"
                    android:background="@drawable/bg_button_main"
                    android:layout_width="60dp"
                    android:layout_height="40dp" />
                <Button
                    android:id="@+id/btn_item_lamaran_delete"
                    android:text="delete"
                    android:textColor="@color/putih"
                    android:layout_marginLeft="4dp"
                    android:background="@drawable/bg_button_main"
                    android:layout_width="60dp"
                    android:layout_height="40dp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>